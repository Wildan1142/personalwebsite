    <h1 class="text-center p-3">Add Project</h1>
    <div class="container mt-4 border border-secondary border-3 p-3 fs-4">
      <form action="/projectnew" method="post">
        <div>
          <label for="title" class="form-label">Project Name</label>
          <input type="title" class="form-control" name="title" />
        </div>

        <div>
          <label for="startdate" class="form-label">Start Date</label>
          <input name="startdate" />

          <script>
            $("#startdate").datepicker({ uiLibrary: "bootstrap5", });
          </script>
        </div>

        <div>
          <label for="enddate" class="form-label">End Date</label>
          <input name="enddate" />

          <script>
            $("#enddate").datepicker({ uiLibrary: "bootstrap5", });
          </script>
        </div>

        <div class="mb-3">
          <label for="desc" class="form-label">Description</label>
          <textarea class="form-control" name="desc" rows="4"></textarea>
        </div>

        <div>
          <div>
            <label for="techno" class="form-label">Technologies</label>
          </div>
          <div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                value="nodejs"
                name="tech1"
              />
              <label class="form-check-label" for="tech1"> Node Js </label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                value="nextjs"
                name="tech2"
              />
              <label class="form-check-label" for="tech2"> Next Js </label>
            </div>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="checkbox"
              value="rectjs"
              name="tech3"
            />
            <label class="form-check-label" for="tech3"> React Js </label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="checkbox"
              value="typescript"
              name="tech4"
            />
            <label class="form-check-label" for="tech4"> Typescript </label>
          </div>
        </div>

        <div class="mb-3">
          <label for="img" class="form-label">Upload Image</label>
          <input class="form-control" type="file" name="img" accept="image/*" />
        </div>

        <div class="d-flex justify-content-end">
          <button class="btn btn-primary d-flex" type="submit">
            Submit
          </button>
        </div>
      </form>
    </div>

    <script src="assets/js/project.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
